@model List<FirstNetCoreMVC.ViewModels.MoviesByGenreViewModel>
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table">
    <tr>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <th>
                @Html.DisplayFor(x => Model[i].Genre)
            </th>
        }
    </tr>

    @for (var i = 0; i < Model.Max(t => t.Movies.Count); i++)
    {
        <tr>
            @for (var x = 0; x < Model.Count(); x++)
            {
                if (Model[x].Movies.Count > i)
                {
                    <td>
                        @Model[x].Movies[i].Title
                    </td>
                }
            }
        </tr>
    }

</table>
